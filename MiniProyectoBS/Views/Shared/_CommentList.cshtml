@model IEnumerable<MiniProyecto.Models.Comment>

<nav class="navbar navbar-danger bg-danger">
    <span class="navbar-brand h1 text-white">Lista de Comentarios</span>
</nav>

@if (Model.Count() != 0)
{

    <ul class="list-unstyled">

        @foreach (var item in Model)
        {
            <li class="media my-2">
                <button type="button" class="btn btn-primary align-self-center mr-4">
                    <span class="badge badge-light">ID: @item.Id</span>
                </button>
                <div class="media-body">
                    <h5 class="mt-0 mb-1">@item.Name</h5>
                    <h6 class="mt-0 mb-1">@item.Email</h6>
                    <p>@item.Body</p>
                </div>
            </li>
        }

    </ul>

}
else
{

    <div class="pt-3 pb-6" style="text-align: center">
        <h6> ==> No existen comentarios para la foto seleccionada <==</h6>
    </div>

}